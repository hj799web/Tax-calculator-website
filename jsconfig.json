{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "tests/**/*.js",
    "tests/**/*.ts",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/_tmp_*.vue",
    "_tmp_*.vue"
  ]
}
